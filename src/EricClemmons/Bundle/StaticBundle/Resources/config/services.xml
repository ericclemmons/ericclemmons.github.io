<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="static.markdown.parser.class">EricClemmons\Bundle\StaticBundle\Parser\MarkdownParser</parameter>
        <parameter key="static.post_repository.class">EricClemmons\Bundle\StaticBundle\Repository\PostRepository</parameter>
        <parameter key="static.page_repository.class">EricClemmons\Bundle\StaticBundle\Repository\PageRepository</parameter>
        <parameter key="static.client.class">Symfony\Bundle\FrameworkBundle\Client</parameter>
        <parameter key="static.client.parameters" type="collection" />
        <parameter key="static.client.history.class">Symfony\Component\BrowserKit\History</parameter>
        <parameter key="static.client.cookiejar.class">Symfony\Component\BrowserKit\CookieJar</parameter>
        <parameter key="static.session.listener.class">Symfony\Bundle\FrameworkBundle\EventListener\SessionListener</parameter>
    </parameters>

    <services>
        <!-- Parser -->
        <service id="static.markdown.parser" class="%static.markdown.parser.class%" />

        <!-- Repositories -->
        <service id="static.post_repository" class="%static.post_repository.class%">
            <argument>%kernel.root_dir%/Resources/content/posts</argument>
            <argument type="service" id="static.markdown.parser" />
            <argument type="service" id="router" />
        </service>

        <service id="static.page_repository" class="%static.page_repository.class%">
            <argument>%kernel.root_dir%/Resources/content/pages</argument>
            <argument type="service" id="static.markdown.parser" />
            <argument type="service" id="router" />
        </service>

        <!-- Static Client -->
        <service id="static.client" class="%static.client.class%" scope="prototype">
            <argument type="service" id="kernel" />
            <argument>%static.client.parameters%</argument>
            <argument type="service" id="static.client.history" />
            <argument type="service" id="static.client.cookiejar" />
        </service>

        <service id="static.client.history" class="%static.client.history.class%" scope="prototype" />

        <service id="static.client.cookiejar" class="%static.client.cookiejar.class%" scope="prototype" />

        <service id="static.session.listener" class="%static.session.listener.class%">
            <argument type="service" id="service_container" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
