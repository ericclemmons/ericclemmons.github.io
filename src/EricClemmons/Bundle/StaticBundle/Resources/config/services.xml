<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="static.article_repository.class">EricClemmons\Bundle\StaticBundle\Repository\ArticleRepository</parameter>
        <parameter key="static.page_repository.class">EricClemmons\Bundle\StaticBundle\Repository\PageRepository</parameter>
    </parameters>

    <services>
        <service id="static.article_repository" class="%static.article_repository.class%">
            <argument>%kernel.root_dir%/Resources/articles</argument>
            <argument type="service" id="markdown.parser" />
        </service>
        <service id="static.page_repository" class="%static.page_repository.class%">
            <argument>%kernel.root_dir%/Resources/pages</argument>
            <argument type="service" id="markdown.parser" />
        </service>
    </services>
</container>
