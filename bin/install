#!/usr/bin/env php
<?php

$root           = realpath(__DIR__ . '/../');
$interpreter    = (PHP_OS == 'WINNT') ? 'php.exe' : 'php';

chdir($root);

// Install Composer
if (! file_exists($root.'/composer.phar')) {
    passthru(sprintf('curl -s http://getcomposer.org/installer | %s -- %s', $interpreter, $root));
}

// Install vendors
passthru(sprintf('%s %s/composer.phar install', $interpreter, $root));
